#!/usr/bin/python3 -u
# BOTLIB - the bot library !
#
#

import sys, os ; sys.path.insert(0, os.getcwd())

from bot.csl import execute
from bot.krn import k
from bot.prs import parse_cli

def main():
    c = parse_cli("bot")
    if c.txt:
        k.walk("bot")
        return k.cmd(c.origtxt)
    if "s" in c.opts:
        c.mods += ",csl,cmd,opr,ent,mbx"
    if c.mods:
        k.start()
        k.init(c.mods)
        k.wait()

execute(main)
