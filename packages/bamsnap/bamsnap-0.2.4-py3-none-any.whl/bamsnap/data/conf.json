{
    "TITLE":"BAMSNAP",
    "VERSION":"0.2.4",
    "VERSION_DATE":"2020-07-15",
    "PROG":"bamsnap",
    "options":[
        {"param":"bam", "default":[], "nargs":"*", "action": null, "choices":null, "type":null, "help":"bam file(s)"},
        {"param":"bamlist", "default":null, "nargs":null, "action":null, "choices":null, "type":null, "help":"list file with bam file paths"},
        {"param":"title", "default":[], "nargs":"*", "action":null, "choices":null, "type":null, "help":"title (name) of bam file(s)"},
        {"param":"pos", "default":[], "nargs":"*", "action":null, "choices":null, "type":null, "help":"genomic position (ex. 1:816687-818057, 12:7462545)"},
        {"param":"vcf", "default":null, "nargs":null, "action":null, "choices":null, "type":null, "help":"list file with genomic positions with VCF format"},
        {"param":"bed", "default":null, "nargs":null, "action":null, "choices":null, "type":null, "help":"list file with genomic positions with BED format"},
        {"param":"out", "default":"bamsnap_out", "nargs":null, "action":null, "choices":null, "type":null, "help":"output file or title of output file"},
        {"param":"imagetype", "default":"png", "nargs":null, "action":null, "choices":["png", "jpg"], "type":null, "help":"output file type"},
        {"param":"conf", "default":"", "nargs":null, "action":null, "choices":null, "type":null, "help":"configuration file"},
        {"param":"ref", "default":"", "nargs":null, "action":null, "choices":null, "type":null, "help":"Reference sequence fasta file (ex. hg19.fa)"},
        {"param":"ref_index_rebuild", "default":false, "nargs":null, "action":"store_true", "choices":null, "type":null, "help":"if you want to rebuild fasta index file (.fai), when it is older than the fasta file. (Default: false)"},
        {"param":"refversion", "default":"hg38", "nargs":null, "action":null, "choices":["hg19", "hg38"], "type":null, "help":"Reference version (default: hg38)"},
        {"param":"save_image_only", "default":false, "nargs":null, "action":"store_true", "choices":null, "type":null, "help":"save image only"},
        {"param":"image_dir_name", "default":"bamsnap_images", "nargs":null, "action":null, "choices":null, "type":null, "help":"image directory name"},
        {"param":"zipout", "default":false, "nargs":null, "action":"store_true", "choices":null, "type":null, "help":"make a single zip file"},
        {"param":"separator_height", "default":30, "nargs":null, "action":null, "choices":null, "type":"int", "help":"separator's height"},

        {"param":"draw", "default":["coordinates","bamplot","base","gene"], "nargs":"*", "action":null, "choices":null, "type":null, "help":"plot (default: -draw coordinates bamplot base gene)"},
        {"param":"bamplot", "default":["coverage","base","read"], "nargs":"*", "action":null, "choices":null, "type":null, "help":"plot (default: -bamplot coverage base read)"},
        {"param":"width", "default":1000, "nargs":null, "action":null, "choices":null, "type":"int", "help":"image file size : width (unit:px)"},
        {"param":"height", "default":null, "nargs":null, "action":null, "choices":null, "type":null, "help":"image file size : height (unit:px)"},
        {"param":"bgcolor", "default":"FFFFFF", "nargs":null, "action":null, "choices":null, "type":null, "help":"background color"},
