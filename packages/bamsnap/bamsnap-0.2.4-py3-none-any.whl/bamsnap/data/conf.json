        {"param":"plot_margin_left", "default":0, "nargs":null, "action":null, "choices":null, "type":"int", "help":"left margin size of plot"},
        {"param":"plot_margin_right", "default":0, "nargs":null, "action":null, "choices":null, "type":"int", "help":"right margin size of plot"},
        {"param":"border", "default":false, "nargs":null, "action":"store_true", "choices":null, "type":null, "help":"draw border in plot"},
        
        {"param":"read_thickness", "default":5, "nargs":null, "action":null, "choices":null, "type":"int", "help":"read thickness (unit:px)"},
