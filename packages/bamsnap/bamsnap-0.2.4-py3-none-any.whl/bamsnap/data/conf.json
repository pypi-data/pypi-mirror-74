        {"param":"read_bgcolor", "default":"FFFFFF", "nargs":null, "action":null, "choices":null, "type":null, "help":"read background color"},
        {"param":"read_color", "default":"C8C8C8", "nargs":null, "action":null, "choices":null, "type":null, "help":"read color"},
        {"param":"read_pos_color", "default":"ffac9c", "nargs":null, "action":null, "choices":null, "type":null, "help":"positive strand read color"},
        {"param":"read_neg_color", "default":"A19Cff", "nargs":null, "action":null, "choices":null, "type":null, "help":"negative strand read color"},
        {"param":"read_group", "default":"", "nargs":null, "action":null, "choices":["strand"], "type":null, "help":"read group"},

        {"param":"margin", "default":50, "nargs":null, "action":null, "choices":null, "type":"int", "help":"genomic margin size"},
        {"param":"center_line", "default":false, "nargs":null, "action":"store_true", "choices":null, "type":null, "help":"draw center line"},
        {"param":"no_target_line", "default":false, "nargs":null, "action":"store_true", "choices":null, "type":null, "help":"do not draw target line"},

        {"param":"base_fontsize", "default":9, "nargs":null, "action":null, "choices":null, "type":"int", "help":"font size of base plot"},
        {"param":"base_height", "default":30, "nargs":null, "action":null, "choices":null, "type":"int", "help":"base plot height"},
        {"param":"base_margin_top", "default":0, "nargs":null, "action":null, "choices":null, "type":"int", "help":"top margin size of base plot"},
        {"param":"base_margin_bottom", "default":0, "nargs":null, "action":null, "choices":null, "type":"int", "help":"bottom margin size of base plot"},

        {"param":"coverage_height", "default":40, "nargs":null, "action":null, "choices":null, "type":"int", "help":"coverage plot height"},
        {"param":"coverage_fontsize", "default":9, "nargs":null, "action":null, "choices":null, "type":"int", "help":"coverage font size"},
        {"param":"coverage_vaf", "default":0.2, "nargs":null, "action":null, "choices":null, "type":"float", "help":"coverage variant allele fraction threshold (default: 0.2)"},
        {"param":"coverage_color", "default":"C8C8C8", "nargs":null, "action":null, "choices":null, "type":null, "help":"coverage color"},
        {"param":"coverage_bgcolor", "default":"FFFFFF", "nargs":null, "action":null, "choices":null, "type":null, "help":"coverage plot background color"},
        
        {"param":"heatmap_height", "default":5, "nargs":null, "action":null, "choices":null, "type":"int", "help":"coverage heatmap height"},
        {"param":"heatmap_bgcolor", "default":"FFFFFF", "nargs":null, "action":null, "choices":null, "type":null, "help":"coverage heatmap plot background color"},
        
        {"param":"no_title", "default":false, "nargs":null, "action":"store_true", "choices":null, "type":null, "help":"do not draw label."},
        
        {"param":"gene_height", "default":50, "nargs":null, "action":null, "choices":null, "type":"int", "help":"gene plot height"},
        {"param":"gene_fontsize", "default":10, "nargs":null, "action":null, "choices":null, "type":"int", "help":"font size of gene plot"},
        {"param":"gene_pos_color", "default":"ffac9c", "nargs":null, "action":null, "choices":null, "type":null, "help":"positive strand color"},
        {"param":"gene_neg_color", "default":"A19Cff", "nargs":null, "action":null, "choices":null, "type":null, "help":"negative strand color"},

        {"param":"coordinates_height", "default":20, "nargs":null, "action":null, "choices":null, "type":"int", "help":"coordinate height"},
        {"param":"coordinates_fontsize", "default":12, "nargs":null, "action":null, "choices":null, "type":"int", "help":"coordinate font size"},
        {"param":"coordinates_axisloc", "default":"bottom", "nargs":null, "action":null, "choices":["top", "bottom", "middle"], "type":null, "help":"coordinate axis location"},
        {"param":"coordinates_bgcolor", "default":"FFFFFF", "nargs":null, "action":null, "choices":null, "type":null, "help":"coordinate background color"},
        {"param":"coordinates_labelcolor", "default":"000000", "nargs":null, "action":null, "choices":null, "type":null, "help":"coordinate label color"},

        {"param":"separated_bam", "default":false, "nargs":null, "action":"store_true", "choices":null, "type":null, "help":"draw a plot for each bam"},
        {"param":"title_fontsize", "default":18, "nargs":null, "action":null, "choices":null, "type":"int", "help":"font size of title"},

        {"param":"debug", "default":false, "nargs":null, "action":"store_true", "choices":null, "type":null, "help":"turn on the debugging mode"}
    ]
}