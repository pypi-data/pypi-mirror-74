<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="contract_category_product_tree" model="ir.ui.view">
    <field name="name">contract.category.product.tree</field>
    <field name="model">contract.category.product</field>
    <field name="arch" type="xml">
      <tree>
        <field name="contract_category"/>
        <field name="product_category"/>
      </tree>
    </field>
  </record>
  <record id="contract_category_product_form" model="ir.ui.view">
    <field name="name">contract.category.product.form</field>
    <field name="model">contract.category.product</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="contract_category"/>
          <field name="product_category"/>
        </group>
      </form>
    </field>
  </record>
  <record id="contract_category_product_action"  model="ir.actions.act_window">
    <field name="name">Contract - Product Category relation</field>
    <field name="res_model">contract.category.product</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree</field>
  </record>
</odoo>
