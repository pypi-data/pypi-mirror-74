{
    "connection": {
        "type": {
            "default": "QRadar",
            "displayName": "IBM\u00ae QRadar and QRadar On Cloud",
            "type": "connectorType"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "type": "number",
            "default": 443
        },
        "help": {
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.1.0/docs/scp-core/data-sources-qradar.html",
            "type": "link"
        },
        "sni": {
            "type": "text",
            "optional": true
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        },
        "data_lake": {
            "type": "boolean",
            "default": false
        },
        "options": {
            "validate_pattern": {
                "default": false,
                "hidden": true,
                "type": "boolean",
                "optional": true,
                "previous": "connection.validate_pattern"
            },
            "hash_options": {
                "type": "json",
                "optional": true,
                "hidden": true
            },
            "type": "fields",
            "result_limit": {
                "default": 10000,
                "min": 1,
                "type": "number",
                "previous": "connection.resultSizeLimit"
            },
            "time_range": {
                "default": 5,
                "min": 1,
                "type": "number",
                "previous": "connection.timerange",
                "nullable": true
            },
            "timeout": {
                "default": 30,
                "min": 1,
                "type": "number",
                "previous": "connection.timeoutLimit"
            },
            "dialects": {
                "type": "array",
                "default": null,
                "hidden": true,
                "previous": "connection.dialects"
            },
            "stix_validator": {
                "type": "boolean",
                "optional": true,
                "hidden": true,
                "previous": "connection.stix_validator"
            },
            "mapping": {
                "type": "json",
                "optional": true,
                "hidden": true,
                "previous": "connection.mapping"
            }
        }
    },
    "configuration": {
        "auth": {
            "type": "fields",
            "sec": {
                "type": "password",
                "previous": "configuration.auth.SEC"
            }
        }
    }
}